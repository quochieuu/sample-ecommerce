@model IEnumerable<Ecommerce.Data.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/client/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>
                        @if (ViewBag.Category == null)
                        {
                            <span>Sản phẩm mới nhất</span>
                        }
                        else
                        {
                            <span>@ViewBag.Category.Name</span>
                        }
                    </h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <span>Products</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <form class="form-inline d-flex" method="get" asp-action="Index">
                          <div class="form-group mb-2">
                            <label for="inputPassword2" class="sr-only">Password</label>
                            <input type="text" class="form-control" id="inputPassword2" placeholder="Search..." name="q" value="@if(ViewBag.q!= null) {<text>@ViewBag.q</text>}">
                            <input type="hidden" name="catelog" value="@if(ViewBag.Category != null) {<text>@ViewBag.Category.Slug</text>}">
                          </div>
                          <button type="submit" class="btn btn-primary mb-2" style="margin-left: -2rem;">Search</button>
                        </form>
                    </div>
                    <div class="sidebar__item">
                        <h4>Danh mục</h4>
                        <ul>
                            @foreach (var cat in @ViewBag.ListCategories)
                            {
                                <li><a href="/product?catelog=@cat.Slug">@cat.Name</a></li>
                            }
                        </ul>
                    </div>
